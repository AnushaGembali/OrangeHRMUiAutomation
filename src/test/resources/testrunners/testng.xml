<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">

<suite name="OrangeHRM Sanity Test Suite" verbose="4"
	thread-count="2" parallel="tests">

	<test name="Login Page Test">
		<parameter name="browser" value="firefox" />
		<classes>
			<class name="com.orangeHRM.tests.LoginPageTest" />
		</classes>
	</test>

	<test name="Login Page Test Chrome">
		<parameter name="browser" value="chrome" />
		<classes>
			<class name="com.orangeHRM.tests.LoginPageTest" />
		</classes>
	</test>

	<test name="Dashboard Page Test">
		<parameter name="browser" value="chrome" />
		<classes>
			<class name="com.orangeHRM.tests.DashboardPageTest" />
		</classes>
	</test>

	<test name="Dashboard Page Test Firefox">
		<parameter name="browser" value="firefox" />
		<classes>
			<class name="com.orangeHRM.tests.DashboardPageTest" />
		</classes>
	</test>

</suite>