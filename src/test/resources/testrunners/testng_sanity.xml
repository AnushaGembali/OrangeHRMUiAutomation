<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">

<suite name="OrangeHRM Sanity Test Suite" verbose="4"
	thread-count="1" parallel="tests">

	<groups>
		<run>
			<include name="sanity" />
		</run>
	</groups>

	<listeners>
		<listener
			class-name="com.aventstack.chaintest.plugins.ChainTestListener" />
		<listener
			class-name="com.orangeHRM.listeners.AnnotationTransformer"></listener>
	</listeners>

	<test name="Login Page Test" >
		<parameter name="browser" value="firefox" />
		<classes>
			<class name="com.orangeHRM.tests.LoginPageTest" />
		</classes>
	</test>

	<test name="Dashboard Page Test">
		<parameter name="browser" value="chrome" />
		<classes>
			<class name="com.orangeHRM.tests.DashboardPageTest" />
		</classes>
	</test>

</suite>